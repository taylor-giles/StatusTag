{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./*.ts", "./types/*.d.ts", "./data/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
